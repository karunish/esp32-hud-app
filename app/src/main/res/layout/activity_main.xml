<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <TextView
        android:id="@+id/speedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0.0 km/h"
        android:textColor="#00FF00"
        android:textSize="48sp"
        android:layout_centerInParent="true"
        android:textStyle="bold" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connect to ESP32"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#00FF00"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Disconnected"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:layout_above="@id/connectButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <Switch
        android:id="@+id/debugModeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debug Mode"
        android:textColor="#FFFFFF"
        android:layout_above="@id/statusText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/speedText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/manualSpeedInput"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Enter fake speed"
            android:inputType="numberDecimal"
            android:visibility="gone"
            android:textColor="#000000"
            android:textColorHint="#AAAAAA"
            android:background="@android:drawable/edit_text" />

        <Button
            android:id="@+id/sendSpeedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send"
            android:visibility="gone"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00FF00"
            />
    </LinearLayout>

</RelativeLayout>
